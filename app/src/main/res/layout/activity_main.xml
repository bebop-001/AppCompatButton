<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:layout_margin="3dp"
    tools:context="com.kana_tutor.buttonshortlongclickdemo.MainActivity">

    <TextView
        android:id="@+id/activity_name_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:text="--"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/short_long_TV"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <com.kana_tutor.buttonshortlongclickdemo.CustomButton
        android:id="@+id/button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@android:color/background_light"
        android:text="Press Me"
        custom:onClick="onClick_1"
        custom:onLongClick="longClick_1"
        tools:ignore="HardcodedText" />
    <com.kana_tutor.buttonshortlongclickdemo.CustomButton
        android:id="@+id/button_2"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="Press Me Too"
        custom:onClick="onClick_2"
        custom:onLongClick="longClick_2"
        tools:ignore="HardcodedText" />
    <com.kana_tutor.buttonshortlongclickdemo.CustomButton
        android:id="@+id/button_3"
        android:background="@android:color/background_light"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press Me Free"
        custom:onClick="onClick_3"
        custom:onLongClick="longClick_3"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/change_activity"
        android:background="@android:color/background_light"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select other activity"
        android:onClick="onClickChangeActivity"
        tools:ignore="HardcodedText" />

</LinearLayout>
